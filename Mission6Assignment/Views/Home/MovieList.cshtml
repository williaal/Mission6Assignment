@model IEnumerable<dynamic>

<div class="container my-4">
    <h2 class="mb-3">Movie List</h2>
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Movie Name</th>
                <th>Year</th>
                <th>Category</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Copied To Plex</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.CategoryName</td>
                    <td>@(x.Director ?? "N/A")</td>
                    <td>@(x.Rating ?? "N/A")</td>
                    <td>@(x.Edited == 1 ? "Yes" : "No")</td>
                    <td>@(x.LentTo ?? "N/A")</td>
                    <td>@(x.CopiedToPlex == 1 ? "Yes" : "No")</td>
                    <td>@(x.Notes ?? "N/A")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-sm btn-info text-white" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
